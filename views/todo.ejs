<!DOCTYPE html>

<head>
<!-- ejs template in html for our todo app -->
<title>Todo App</title>

<!-- stylesheets for styling our fonts and items -->
<link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Baloo+Bhai|Candal|Chewy&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>


<body>
    <!-- title for our app -->
<div class="todo-container">
<h2>To-Do List</h2>
<!-- div containing our todo list form that you can add items -->
<div class="todo">
    <!-- create a post request to the index root page and path -->
<form action="/" method="POST" class="todo-header">
<input type="text" name="content">
<!-- display option to submit new task -->
<button type="submit"><span class="fas fa-plus"></span></button>
</form>

<!-- unordered list for each todolist item -->
<ul class="todo-list">
    <!-- shows each todo list item from todoTasks and iterates through each item to display them -->
    <% todoTasks.forEach(details => { %>
    <li class="todo-list-item">
        <!-- display contents of single todotask -->
    <div class="todo-list-item-name"><%= details.content %></div>
    <!-- display edit option -->
    <a href="/edit/<%= details._id %>" class="edit">
    <span class="fas fa-edit"></span>
    </a>
    <!-- remove option -->
    <a href="/remove/<%= details._id %>" class="remove">
    <span class="fas fa-times"></span>
    </a>
    </li>
    <% }) %>
    <!-- end of todolist list iteration -->
    </ul>
</div>
</div>
</body>